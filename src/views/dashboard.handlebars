{{!-- Pagina Dashboard --}}
<div class="dashboard-container">
    <header class="dashboard-header">
        <h1 class="header-title">
            Dashboard
        </h1>
    </header>

    <div class="user-info">
        {{#with user }}
            <h2 class="user-name">
                Bienvenido, {{username}}!
            </h2>

            {{#if isAdmin}}
                <h3 class="admin-status status-admin">administrador identificado âœ…</h3>
            {{else}}
                <h3 class="admin-status status-user">sin acceso de administrador ðŸ”’</h3>
            {{/if}}

        {{/with}}
    </div>

    <div>
        <form action="http://localhost:8080/api/products" method="post" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="insertar nombre del producto">
        <input type="number" name="price" placeholder="insertar precio del producto">
        <input type="file" name="image" >

        <button type="submit">Agregar el producto</button>
        </form>
    </div>

    <section class="products-grid">
        {{#each products}}
            <div class="product-card">
                <img class="card-thumbnail" src="{{this.thumbnail}}" alt="{{this.title}}">
                <div class="card-body">
                    <h2 class="card-title">
                        {{this.title}}
                    </h2>
                    <h3 class="card-price">
                        Precio: ${{this.price}}
                    </h3>
                </div>
            </div>
        {{/each}}
    </section>
</div>